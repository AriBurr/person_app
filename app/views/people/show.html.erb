<div class="container">
  <h1>Person</h1>
  <hr>
  <ul>
    <li><%= @person.name %></li>
    <li><%= @person.age %></li>
    <li><%= @person.gender %></li>
    <li><%= @person.hair_color %></li>
    <li><%= @person.eye_color %></li>
  </ul>

  <%= link_to 'Back', people_path, class: 'btn btn-info' %>
  <%= link_to 'Edit', edit_person_path, class: 'btn btn-info' %>
  <%= link_to 'Delete', person_path(@person), method: :delete, data:{ confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</div>
