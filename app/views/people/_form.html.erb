<%= form_for @person do |f| %>
  <div class="form-group row">
    <div class="col-xs-4">
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.label :gender %>
      <%= f.select :gender, ['Female', 'Male', 'Other']%>
    </div>
    <div class="col-xs-3">
      <%= f.label :age %>
      <%= f.number_field :age %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-3">
      <%= f.label :hair_color %>
      <%= f.select :hair_color, ['Black', 'Brown', 'Blond', 'Red', 'White', 'Gray', 'Other']%>
    </div>
    <div class="col-xs-3">
      <%= f.label :eye_color %>
      <%= f.select :eye_color, ['Amber', 'Blue', 'Brown', 'Gray', 'Green', 'Hazel', 'Violet', 'Other'] %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :alive %>
    <%= f.check_box :alive %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to 'Cancel', people_path, class: 'btn btn-danger' %>
<% end %>
